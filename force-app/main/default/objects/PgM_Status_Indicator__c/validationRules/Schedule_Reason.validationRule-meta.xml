<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Schedule_Reason</fullName>
    <active>true</active>
    <description>Schedule is Yellow or Red</description>
    <errorConditionFormula>PgM_Schedule_Value__c &gt; 3 &amp;&amp;
ISBLANK( PgM_Schedule_Reason__c )</errorConditionFormula>
    <errorDisplayField>PgM_Schedule_Reason__c</errorDisplayField>
    <errorMessage>Reason is required when the Schedule Rating is Yellow or Red.</errorMessage>
</ValidationRule>
