<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Week_Ending_Date_must_be_a_Friday</fullName>
    <active>true</active>
    <description>The Week Ending Date must be a Friday.</description>
    <errorConditionFormula>MOD(PgM_Week_Ending__c - DATE(1900, 1, 7), 7) &lt;&gt; 5</errorConditionFormula>
    <errorDisplayField>PgM_Week_Ending__c</errorDisplayField>
    <errorMessage>Week Ending Date must be a Friday.</errorMessage>
</ValidationRule>
