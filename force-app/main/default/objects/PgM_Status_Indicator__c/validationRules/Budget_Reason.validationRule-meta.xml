<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Budget_Reason</fullName>
    <active>true</active>
    <description>Budget rating is Yellow or Red</description>
    <errorConditionFormula>PgM_Budget_Value__c &gt; 3 &amp;&amp;
ISBLANK( PgM_Budget_Reason__c )</errorConditionFormula>
    <errorDisplayField>PgM_Budget_Reason__c</errorDisplayField>
    <errorMessage>Reason is required when the Budget Rating is Yellow or Red.</errorMessage>
</ValidationRule>
